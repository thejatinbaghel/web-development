<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nice</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none placeholder-gray-450 text-white" type="text" name="title" id="" placeholder="Title goes here...">
                <textarea class="block px-5 py-2 bg-zinc-800 resize-none mt-2 w-full rounded-md outline-none placeholder-gray-450 text-white" name="details" id="" placeholder="Write your task details here..."></textarea>
               
                <button class="mt-2 px-5 py-2 bg-blue-600 text-white cursor-pointer rounded-md">Create Task</button>
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap">
            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                <h1 class="text-white text-3xl tracking-tighter"><%= val%></h1>
                <div class="flex w-full justify-between items-center mt-3">
                    <a href="/files/<%= val %>" class="text-blue-500 inline-block">Read more.</a>
                    <a class="text-zinc-600" href="/edit/<%= val %>">edit</a>  
                </div>
            </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">no tasks yet.</h3>
            <% } %>
            
        </div>
    </div>
</body>
</html>